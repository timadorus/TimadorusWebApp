<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

	<managed-bean>
		<description>hold the information about the character being created</description>
		<managed-bean-name>statsBean</managed-bean-name>
		<managed-bean-class>de.harper_hall.timadorus.webapp.bookkeeper.chargen.beans.StatsBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>temp_stats</display-name>
		<from-view-id>/temp_stats.jsp</from-view-id>
		<navigation-case>
			<from-outcome>temp_stats_resolved</from-outcome>
			<to-view-id>/pot_stats.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pot_stats</display-name>
		<from-view-id>/pot_stats.jsp</from-view-id>
		<navigation-case>
			<from-outcome>pot_stats_rolled</from-outcome>
			<to-view-id>/pot_stats.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>pot_stats</display-name>
		<from-view-id>/pot_stats.jsp</from-view-id>
		<navigation-case>
			<from-outcome>pot_stats_resolved</from-outcome>
			<to-view-id>/race_select.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>race_select</display-name>
		<from-view-id>/race_select.jsp</from-view-id>
		<navigation-case>
			<from-outcome>race_stat_selected</from-outcome>
			<to-view-id>/show_character.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>show_character</display-name>
		<from-view-id>/show_character.jsp</from-view-id>
		<navigation-case>
			<from-outcome>skill_pick_added</from-outcome>
			<to-view-id>/show_character.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
