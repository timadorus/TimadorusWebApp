<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
	<!-- Ajax-Communication requires that big inner classes containing the callback function for Async-Response -->
    <suppress checks="AnonInnerLength" files="RegisterPanel.java" />
    <suppress checks="AnonInnerLength" files="LoginPanel.java" />

	<!-- Constructor method requires all Parameters for simple test creation -->
    <suppress checks="ParameterNumber" files="Skill.java" />

    <!-- Big testing methods -->
    <suppress checks="ExecutableStatementCount" files="TestCharacterValues.java" />
    <suppress checks="ExecutableStatementCount" files="CreateCustomCharacterTest.java" />
    
    <!-- All the numbers are IDs and levels -->
    <suppress checks="MagicNumber" files="TestCharacterValues.java" />
    
    <!-- All the numbers are rows, columns, positions, sizes -->
    <suppress checks="MagicNumber" files="RegisterPanel.java" />
    <suppress checks="MagicNumber" files="LoginPanel.java" />
    <suppress checks="MagicNumber" files="SelectTempStatsPanel.java" />
    <suppress checks="MagicNumber" files="SelectSkillPanel.java" />
    <suppress checks="MagicNumber" files="SelectSkillLevel1Panel.java" />
    <suppress checks="MagicNumber" files="GetPotStatsPanel.java" />
    <suppress checks="MagicNumber" files="SelectAppearancePanel.java" />
    <suppress checks="MagicNumber" files="ShowCharacterPanel.java" />
    
    <!-- Selenium import in auto-generated selenium tests -->
    <suppress checks="AvoidStarImport" files="CreateCustomCharacterTest.java" />
    <suppress checks="AvoidStarImport" files="CreateDeleteViewCharacterTest.java" />
    <suppress checks="AvoidStarImport" files="RegisterUserTest.java" />
    <suppress checks="AvoidStarImport" files="DeleteUserTest.java" />
    <suppress checks="AvoidStarImport" files="LoginUserFailTest.java" />
    <suppress checks="AvoidStarImport" files="DeleteCharacterFailTest.java" />
    <suppress checks="AvoidStarImport" files="DeleteUserFailTest.java" />

</suppressions>