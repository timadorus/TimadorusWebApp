<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TimadorusWebApp.html</welcome-file>
  </welcome-file-list>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>session</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.SessionServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>session</servlet-name>
    <url-pattern>/timadoruswebapp/session</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.LoginServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/timadoruswebapp/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.RegisterServiceImpl</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>register</servlet-name>
    <url-pattern>/timadoruswebapp/register</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>createCharacter</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.CreateCharacterServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>createCharacter</servlet-name>
    <url-pattern>/timadoruswebapp/createCharacter</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>character</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.CharacterServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>character</servlet-name>
    <url-pattern>/timadoruswebapp/character</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.UserServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/timadoruswebapp/user</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>createCampaign</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.CreateCampaignServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>createCampaign</servlet-name>
    <url-pattern>/timadoruswebapp/createCampaign</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>createFraction</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.CreateFractionServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>createFraction</servlet-name>
    <url-pattern>/timadoruswebapp/createFraction</url-pattern>
  </servlet-mapping>
</web-app>
