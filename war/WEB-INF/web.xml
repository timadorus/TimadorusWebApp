<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>TimadorusWebApp.html</welcome-file>
  </welcome-file-list>
  
     <!-- run all requests through the Guice filter. Eventually this should be 
        the only statement in the file.
    -->
  <filter>
    <filter-name>guiceFilter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>guiceFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
  <!-- set config on app start to create a Guice injector -->
  <listener>
     <listener-class>de.haw_hamburg.informatik.webting.server.TimadorusGuiceServletConfig</listener-class>
  </listener>
  
  <!-- Servlets -->
  <servlet>
    <servlet-name>actionService</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.ServiceImpl</servlet-class>
  </servlet>
 
  <servlet-mapping>
    <servlet-name>actionService</servlet-name>
    <url-pattern>/timadoruswebapp/actionService</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>session</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.SessionServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>session</servlet-name>
    <url-pattern>/timadoruswebapp/session</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>createCharacter</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.CreateCharacterServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>createCharacter</servlet-name>
    <url-pattern>/timadoruswebapp/createCharacter</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>user</servlet-name>
    <servlet-class>org.timadorus.webapp.server.rpc.service.UserServiceImpl</servlet-class>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>user</servlet-name>
    <url-pattern>/timadoruswebapp/user</url-pattern>
  </servlet-mapping>
  
</web-app>
